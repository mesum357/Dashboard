<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tourist Data</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Assuming chart.js is not needed on this specific page, removed for clarity -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> -->
    <!-- Link to your CSS file -->
    <link rel="stylesheet" href="/css/tourist_data.css">
    <!-- Add styles directly here or ensure they are in tourist_data.css -->
    <style>
        /* Basic table styling */
        .previous-data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px; /* Add some space above the table */
        }

        .previous-data-table th,
        .previous-data-table td {
            padding: 10px 12px; /* Adjust padding */
            border-bottom: 1px solid #ddd;
            text-align: left; /* Align text to the left */
            vertical-align: middle; /* Align content vertically */
        }

        .previous-data-table thead th {
            background-color: #f5f5f5;
            border-bottom-width: 2px; /* Thicker bottom border for header */
            font-weight: 600; /* Make header text bolder */
        }

        .previous-data-table tbody tr:hover {
            background-color: #f9f9f9; /* Add a subtle hover effect */
        }

        .previous-data-table img {
            width: 50px; /* Slightly smaller image */
            height: 50px; /* Maintain aspect ratio */
            object-fit: cover; /* Ensure image covers the area */
            border-radius: 4px; /* Slightly rounded corners */
            vertical-align: middle;
        }

        /* Responsive wrapper */
        .table-responsive-wrapper {
            overflow-x: auto; /* Enable horizontal scrolling */
            -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
            margin-bottom: 15px; /* Space below the scrolling area */
        }

        /* Button styling (example) */
        .action-buttons {
            margin-top: 20px;
            display: flex;
            gap: 10px; /* Space between buttons */
        }

        .action-buttons button {
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 500;
        }

        .btn-send {
            background-color: #B06C5D; /* Keep original color */
            color: white;
        }

        .btn-print {
            background-color: transparent;
            color: #B06C5D; /* Keep original color */
            border: 1px solid #B06C5D; /* Keep original border */
        }

        /* Add other styles from your tourist_data.css or here */
        /* ... */

    </style>
</head>
<body>
   <%- include('sidebar') -%> 

            
            <div class="order-info">
                <div class="order-date">
                    <label>Order Date</label>
                    <input type="text" name="orderDate" value="<%= new Date().toLocaleDateString() %>" readonly required>
                </div>
                <div class="order-time"> 
                    <label>Time</label>
                    <input type="text" name="orderTime" value="<%= new Date().toLocaleTimeString() %>" readonly  required>
                </div>
                <div class="vehicle-number">
                    <label>Vehicle Number</label>
                    <input type="text" name="vehicleNumber" required>
                </div>
            </div>

            <div class="personal-info">
                <h3>Personal Information</h3>
                <div class="data-main">
                    <div class="personal-info-main">
                        <div class="profile-image">
                            <label>Profile Image</label>
                            <div class="image-upload">
                                <div class="upload-container">
                                    <img src="/assets/images/Input.png" alt="Profile Preview" id="profilePreview">
                                    <input type="file" name="profileImage" id="profileInput" accept="image/*" onchange="previewImage(this, 'profilePreview')">
                                    <label for="profileInput" class="upload-label">Choose File</label>
                                </div>
                            </div>
                        </div>
                        <div class="driving-license">
                            <label>Driving License</label>
                            <div class="image-upload">
                                <div class="upload-container">
                                    <img src="/assets/images/Input.png" alt="License Preview" id="licensePreview">
                                    <input type="file" name="drivingLicenseImage" id="licenseInput" accept="image/*" onchange="previewImage(this, 'licensePreview')">
                                    <label for="licenseInput" class="upload-label">Choose File</label>
                                </div>
                            </div>
                        </div>
                        <!-- Keep the previewImage function -->
                        <script>
                            function previewImage(input, previewId) {
                                const preview = document.getElementById(previewId);
                                if (input.files && input.files[0]) {
                                    const reader = new FileReader();
                                    reader.onload = function(e) {
                                        preview.src = e.target.result;
                                    }
                                    reader.readAsDataURL(input.files[0]);
                                } else {
                                     // Optional: Reset to default image if no file selected
                                     // preview.src = '/assets/images/Input.png';
                                }
                            }
                        </script>
                    </div>
                    <div class="passenger-info-main">
                        <div class="passenger-info">
                            <div class="total-passengers">
                                <label>Total Passengers</label>
                                <!-- Fixed missing quote in name attribute -->
                                <input type="number" placeholder="No of Passengers" name="passengers"  required>
                            </div>
                            <div class="number-females">
                                <label>Number of Females</label>
                                <input type="number" placeholder="Number of Female Passengers" name="females" required>
                            </div>
                            <div class="number-males">
                                <label>Number of Males</label>
                                <input type="number" placeholder="Number of Male Passengers" name="males" required>
                            </div>
                        </div>
                        <div class="vehicle-info">
                            <div class="vehicle-passengers">
                                <h3>Vehicle with Passengers</h3>
                                <input type="checkbox" class="checkbox">
                            </div>
                            <div class="vehicle-goods">
                                <h3>Vehicle with Goods</h3>
                                <input type="checkbox" class="checkbox">
                            </div>
                            <div class="type-goods">
                                <label>Type of Goods</label>
                                <input type="text" placeholder="Enter type of goods" name="goods" required>
                            </div>
                        </div>
                     </div>
                </div>
                <button type="submit" class="save-data">Save Data</button> <!-- Ensure button type is submit -->
            </div>
        </div>
    </form>

    <!-- SECTION 2 -->
    <div class="section-2">
        <h3>Previous Data</h3>
        <!-- Add the responsive wrapper div -->
        <div class="table-responsive-wrapper">
            <!-- Add class to table, remove inline styles -->
            <table class="previous-data-table">
                <thead>
                    <!-- Remove inline styles from tr and th -->
                    <tr>
                        <th>SL No</th>
                        <th>Order No</th> <!-- Changed from CNIC -->
                        <th>Time</th> <!-- Changed from Driving License -->
                        <th>Vehicle No</th> <!-- Changed from Type of goods -->
                        <th>Females</th> <!-- Changed from No of Females -->
                        <th>Males</th> <!-- Changed from No of Males -->
                        <th>Total Pax</th> <!-- Changed from Total Passengers -->
                        <th>Image</th> <!-- Changed from V Number -->
                    </tr>
                </thead>
                <tbody>
                    <!-- Ensure 'data' variable is passed from the route -->
                    <% if (typeof data !== 'undefined' && data.length > 0) { %>
                        <% data.forEach((upload, index) => { %>
                            <!-- Remove inline styles from tr and td -->
                            <tr>
                                <td><%= upload.srNo %></td> <!-- Use index for SL No -->
                                <td><%= upload.orderNo %></td>
                                <td><%= upload.time %></td>
                                <td><%= upload.vehicleNumber %></td>
                                <td><%= upload.females || 0 %></td>
                                <td><%= upload.males || 0 %></td>
                                <td><%= upload.passengers || ( (upload.males || 0) + (upload.females || 0) ) %></td>
                                <td>
                                    <!-- Check if profileImage exists -->
                                    <% if (upload.profileImage) { %>
                                        <img src="<%= upload.profileImage %>" alt="Profile">
                                    <% } else { %>
                                        
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" style="text-align: center; padding: 20px;">No previous data available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div> <!-- Close table-responsive-wrapper -->

        <!-- Add class to button container, remove inline styles -->
        <div class="action-buttons">
            <button class="btn-send">Send Details</button>
            <button class="btn-print" onclick="window.print()">Print Now</button> <!-- Use window.print() -->
        </div>
    </div>

    <!-- Removed redundant image upload script block -->

</body>
</html>